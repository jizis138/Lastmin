<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinkText"
            android:text="@string/example_cost"
            />

    <ImageButton
            android:id="@+id/ib_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_action_favorite_border"
            android:background="@android:color/transparent"
            android:layout_marginStart="@dimen/def_margin"
            android:layout_toEndOf="@+id/tv_cost"
            />

    <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_date_range"
            android:layout_below="@+id/tv_cost"
            android:layout_alignStart="@+id/tv_cost"
            android:layout_marginTop="@dimen/min_margin"
            android:layout_marginEnd="@dimen/medium_margin"
            style="@style/SmallText"
            />

</RelativeLayout>