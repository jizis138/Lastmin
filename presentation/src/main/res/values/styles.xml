<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PinkText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="PinkText.Large">
        <item name="android:textSize">34sp</item>
    </style>
    <style name="PinkText.Big">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NormalText.Big">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LightText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_38</item>
    </style>

    <style name="LightText.Color75">
        <item name="android:textColor">@color/black_75</item>
    </style>

    <style name="DarkText.Big">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="DarkText.Toolbar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="DarkText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText.Big">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="WhiteText.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteText.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="stroke">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="progress">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="BorderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconTint">@android:color/transparent</item>
    </style>

    <style name="GreenText">
        <item name="android:textColor">@color/main_green</item>
    </style>

    <style name="GreenText.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetDialogStyle"></style>
    <style name="WhiteToolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="example_card_expire">09/23</style>
